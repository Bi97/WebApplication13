@model IEnumerable<WebApplication13.Models.SanPham>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <p>
                                    @Html.ActionLink("Thêm Sản Phẩm", "Create")
                                </p>
                                <hr class="border-cyan" />


                                <h5 class="card-title; text-center" style="font-size:30px; color:red    ">Danh Sách Sản Phẩm</h5>
                                <hr class="border-cyan" />
                                <div class="table-responsive">
                                    <table id="zero_config" class="table table-striped table-bordered">
                                        <thead style="background-color:lightcyan;font-size:18px " class="text-center">
                                            <tr>
                                                <th>Mã Sản Phẩm</th>
                                                <th>Tên Sản Phẩm</th>
                                                <th>Nhà Cung Cấp</th>
                                                <th>Loại Sản Phẩm</th>
                                                <th>Số Lượng</th>
                                                <th>Mô Tả</th>
                                                <th>Chức Năng</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {

                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SanPhamId)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TenSP)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.NhaCungCap.TenNhaCungCap)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.LoaiSP.TenLoai)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SoLuong)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.MoTa)
                                                    </td>
                                                    <td>
                                                        @Html.ActionLink("Sửa Sản Phẩm", "Edit", new { id = item.SanPhamId }) |

                                                        @Html.ActionLink("Xoá Sản Phẩm", "Delete", new { id = item.SanPhamId }) |   
                                                      
                                                    </td>
                                                   

                                                </tr>
                                            }
                                        
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
