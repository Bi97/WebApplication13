@model IEnumerable<WebApplication13.Models.SanPham>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <a class="btn btn-outline-orange" href="@Url.Action("Create","SanPhams")">Thêm Sản Phẩm </a>
                </div>
                <hr class="border-cyan" />


                <h5 class="card-title; text-center" style="font-size:30px; color:red    ">Danh Sách Sản Phẩm</h5>
                <hr class="border-cyan" />
                <div class="table-responsive">
                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead style="background-color:lightcyan;font-size:16px " class="text-center">
                            <tr>
                                <th>Mã Sản Phẩm</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Nhà Cung Cấp</th>
                                <th>Loại Sản Phẩm</th>
                                <th>Số Lượng</th>
                               
                                <th>Đơn Giá</th>
                                <th>Chức Năng</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SanPhamId)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenSP)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.NhaCungCap.TenNhaCungCap)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LoaiSP.TenLoai)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoLuong)
                                    </td>

                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DonGia)
                                    </td>
                                    <td>
                                        <a class="btn btn-outline-orange" href="@Url.Action("Edit","SanPhams", new { id = item.SanPhamId } )">Sửa Sản Phẩm </a>
                                    </td>


                                </tr>
                            }

                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
