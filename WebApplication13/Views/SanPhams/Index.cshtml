@model IEnumerable<WebApplication13.Models.SanPham>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_LayoutAdminNew.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-icon card-header-info">
                    <div class="card-icon">
                        <div style="font-size:40px" class="font-weight-bolder">
                            Danh Sách Sản Phẩm
                        </div>                        
                    </div>                  
                </div>
                <div class="card-body">
                    <div class="toolbar">
                        <a class="btn btn-round btn-lg btn-info" href="@Url.Action("Create","SanPhams")">
                            <i class="material-icons">add_circle_outline</i>                                                   
                        </a>                     
                        <!--        Here you can write extra buttons/actions for the toolbar              -->
                    </div>
                    <hr />
                    <div class="material-datatables">
                        <div class="table-responsive">
                            <table id="zero_config" class="table table-striped table-bordered">
                                <thead style="background-color:bisque;font-size:25px " class="text-center">
                                    <tr>
                                        <th>Mã Sản Phẩm</th>
                                        <th>Tên Sản Phẩm</th>
                                        <th>Nhà Cung Cấp</th>
                                        <th>Loại Sản Phẩm</th>
                                        <th>Số Lượng</th>

                                        <th>Đơn Giá</th>
                                        <th>Chức Năng</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SanPhamId)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenSP)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.NhaCungCap.TenNhaCungCap)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LoaiSP.TenLoai)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.SoLuong)
                                            </td>


                                            <td>
                                                @Html.DisplayFor(modelItem => item.DonGia)
                                            </td>
                                            <td>
                                                <a class="btn btn-round  btn-info" href="@Url.Action("Edit","SanPhams", new { id = item.SanPhamId } )">
                                                    <i class="material-icons">create</i>
                                                    <div class="ripple-container"></div>
                                                </a>
                                            </td>


                                        </tr>
                                    }

                            </table>
                        </div>

                    </div>
                </div>
        </div>
    </div>
