<body>
    @using (Html.BeginForm())
    {
        <!-- ============================================================== -->
        <!-- Preloader - style you can find in spinners.css -->
        <!-- ============================================================== -->
        <div class="preloader" style="display: none;">
            <div class="lds-ripple">
                <div class="lds-pos"></div>
                <div class="lds-pos"></div>
            </div>
        </div>

        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Table -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div style="width:100%;">
                            <div class="table-responsive ">
                                <hr class="border-cyan" />
                                <h5 class="card-title; text-center" style="font-size:30px; color:red"> Xác Nhận Thanh Toán</h5>
                                <hr class="border-cyan" />
                                <table class="table color-bordered-table red-bordered-table ">
                                    <thead style="color:red;" class="mt-1">
                                        <tr>
                                            <th>Tên Sản Phẩm</th>
                                            <th>Mô Tả</th>
                                            <th>Số Lượng</th>
                                            <th>Đơn Giá</th>
                                            <th>Chiết Khấu</th>
                                            <th>Tổng Tiền</th>
                                            <th></th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @item.gTenSP
                                                </td>
                                                <td class="col-sm-2">

                                                    @item.gSanPhamId
                                                </td>

                                                <td>
                                                    @String.Format("{0:0,0}", item.gSoLuong)
                                                </td>
                                                <td>
                                                    @String.Format("{0:0,0}", item.gDonGia)
                                                </td>
                                                <td>
                                                    @String.Format("{0:0,0}", item.gGiamGia)
                                                </td>
                                                <td>
                                                    @String.Format("{0:0,0}", item.gThanhTien)
                                                </td>

                                            </tr>
                                        }

                                        <tr style="font-weight:bold;color:brown;">
                                            <td colspan="4" class="font-500" align="right">Total Amount :</td>
                                            <td class="font-500">@String.Format("{0:0,0}", ViewBag.TongTien)</td>
                                            <td colspan="5" class="font-500"> ( @String.Format("{0:0,0}", ViewBag.TongSoLuong) Sản Phẩm )</td>

                                        </tr>
                                    </tbody>
                                </table>
                            </div>


                            <!--=======================================================================================-->
                            <!--=======================================================================================-->
                            <!--Thẻ-->
                            <!--=======================================================================================-->

                            <h5 class="card-title "></h5>
                            <hr />
                            <ul class="nav nav-tabs" role="tablist">
                                <li role="presentation" class="nav-item" style="color:aqua">
                                    <a href="#KhachHang" style="color:blue" class="nav-link active" aria-controls="home" role="tab" data-toggle="tab" aria-expanded="true" aria-selected="true">
                                        <span class="visible-xs"><i class="ti-home"></i></span><span class="hidden-xs">Khách Hàng</span>
                                    </a>
                                </li>

                                <li role="presentation" class="nav-item">
                                    <a href="#NhanVien" style="color:blue" class="nav-link" aria-controls="profile" role="tab" data-toggle="tab" aria-expanded="false" aria-selected="false">
                                        <span class="visible-xs"><i class="ti-user"></i></span>
                                        <span class="hidden-xs">Nhân Viên</span>
                                    </a>
                                </li>

                            </ul>
                            <div class="tab-content">
                                <div role="tabpanel" class="tab-pane" id="NhanVien">
                                    <hr />

                                </div>
                                <div role="tabpanel" class="tab-pane active" id="KhachHang">
                                    <hr />
                                    <div class="card">
                                        <div class="form-group">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                                                </div>
                                                <input type="text" class="form-control" placeholder=" Nhập Số Điện Thoại" id="txtCustomer" aria-label="Username" aria-describedby="basic-addon1">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6 ">
                                                <div class="form-group has-success">
                                                    <label>Tên Khách Hàng</label>
                                                    <div id="log" style="height: 20px; width: 200px; overflow: auto;" class="form-control"></div>
                                                </div>
                                            </div>
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group has-success">
                                                    <label>Số Điện Thoại</label>
                                                    <div id="Sdt" style="height: 20px; width: 200px; overflow: auto;" class="form-control"></div>
                                                </div>
                                            </div>
                                            <!--/span-->
                                        </div>
                                        <!--/row-->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group has-success">
                                                    <label>Địa Chỉ</label>
                                                    <div id="log1" style="height: 20px; width: 200px; overflow: auto;" class="form-control"></div>
                                                </div>
                                            </div>
                                            <!--/span-->
                                            <div class="col-md-6">
                                                <div class="form-group has-success">
                                                    <label>Mã Khách Hàng</label>
                                                    <div  id="KHId" style="height: 20px; width: 200px; overflow: auto;" class="form-control"></div>                                                  
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group has-success">
                                                    <label>Nhập Mã Khách Hàng</label>                                                    
                                                    <input type="number" name="KhachHangId" class="form-control col-md-3"/>
                                                </div>
                                            </div>
                                            <!--/span-->
                                        </div>
                                        <hr />

                                    </div>
                                </div>
                            </div>
                            @using Microsoft.AspNet.Identity
                            @if (Request.IsAuthenticated)
                            {
                                @Html.Name(User.TenCuaHang())
                            }
                            <div>
                                <a class="btn btn-info btn-lg float-left" href="@Url.Action("DS", "BanHang2")">Trở Lại</a>
                                <a class="btn btn-info btn-lg float-right" href="@Url.Action("MuaHang", "BanHang2")">Tiếp Tục</a>


                                <input type="submit" value="Thêm Sản Phẩm" class="btn btn-outline-danger float-right" />


                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- End PAge Content -->
