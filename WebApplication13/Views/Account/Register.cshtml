@model WebApplication13.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Layout/_LayoutDangNhapAdmin.cshtml";

}
                <div class="text-success">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                <div style="color:wheat">
                    <h4 style="font-size:25px">Đăng Ký Tài Khoản Mới</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-7 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName, new { @class = "col-md-7 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-7 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-7 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-7 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                    <div class="row border-top border-secondary">
                        <div class="col-md-12 ">
                            <div class="form-group">
                                <div class="p-t-20">
                                    <a class="btn btn-outline-orange float-left" href="@Url.Action("Login","Account")"><i class="fa fa-lock m-r-5"></i>Trở Về Đăng Nhập</a>
                                    <input type="submit" class="btn btn-outline-orange float-right" value="Đăng Ký Tài Khoản"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                }
         